<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="@string/appearance_">
		<ListPreference android:key="theme" android:title="@string/theme_"
			android:entries="@array/themes" android:entryValues="@array/themes_values" />
		<EditTextPreference android:key="textsize_group"
			android:title="@string/textsize_group" android:summary="@string/textsize_hint"
			android:defaultValue="16" android:inputType="number" />
		<EditTextPreference android:key="textsize_child"
			android:title="@string/textsize_child" android:summary="@string/textsize_hint"
			android:defaultValue="14" android:inputType="number" />
	</PreferenceCategory>
</PreferenceScreen>
