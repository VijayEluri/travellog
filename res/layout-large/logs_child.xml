<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:paddingLeft="20dip" android:paddingRight="15dip">
	<TextView android:id="@+id/time" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="id/time"
		android:layout_alignParentRight="true" />
	<TextView android:id="@+id/type" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="id/type"
		android:layout_toLeftOf="@id/time" android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip" />
	<TextView android:id="@+id/from_to" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="id/from"
		android:layout_alignParentLeft="true" android:layout_toLeftOf="@id/type" />
	<TextView android:id="@+id/comment" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="id/comment"
		android:layout_below="@id/time" android:layout_alignParentRight="true"
		android:singleLine="false" />
</RelativeLayout>