<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:minHeight="30dip"
	android:layout_height="wrap_content" android:paddingLeft="40dip"
	android:layout_gravity="center_vertical">
	<TextView android:id="@+id/time" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@id/time"
		android:layout_alignParentRight="true" />
	<TextView android:id="@+id/date" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@id/date"
		android:layout_alignParentLeft="true" android:layout_toLeftOf="@id/time" />
</RelativeLayout>