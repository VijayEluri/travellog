<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="@string/appearance_">
		<ListPreference android:key="theme" android:title="@string/theme_"
			android:entries="@array/themes" android:entryValues="@array/themes_values" />
		<EditTextPreference android:key="textsize_group"
			android:title="@string/textsize_group" android:summary="@string/textsize_hint"
			android:defaultValue="16" android:inputType="number" />
		<EditTextPreference android:key="textsize_child"
			android:title="@string/textsize_child" android:summary="@string/textsize_hint"
			android:defaultValue="14" android:inputType="number" />
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/settings">
		<EditTextPreference android:key="mail"
			android:title="@string/mail_" android:dialogTitle="@string/mail_"
			android:inputType="textEmailAddress" android:summary="@string/mail__" />
		<ListPreference android:key="round" android:title="@string/round_"
			android:entries="@array/round_" android:entryValues="@array/round"
			android:dialogTitle="@string/round_" />
		<CheckBoxPreference android:key="export_flip"
			android:title="@string/export_flip" />
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/logtypes_">
		<PreferenceScreen android:title="@string/logtypes_"
			android:summary="@string/logtypes_hint">
			<intent android:action="android.intent.action.MAIN"
				android:targetPackage="de.ub0r.android.travelLog"
				android:targetClass="de.ub0r.android.travelLog.ui.LogTypes" />
		</PreferenceScreen>
		<ListPreference android:key="update_interval"
			android:title="@string/update_interval_" android:summary="@string/update_interval_hint"
			android:entries="@array/update_interval" android:entryValues="@array/update_interval_values"
			android:defaultValue="60" />
		<PreferenceScreen android:key="map" android:title="@string/map_"
			android:summary="@string/map_hint">
			<intent android:action="android.intent.action.MAIN"
				android:targetPackage="de.ub0r.android.travelLog"
				android:targetClass="de.ub0r.android.travelLog.ui.Map" />
		</PreferenceScreen>
	</PreferenceCategory>

	<PreferenceCategory android:title="@string/go_home_">
		<PreferenceScreen android:key="go_home"
			android:title="@string/go_home_" android:summary="@string/go_home_hint">
			<intent android:action="android.intent.action.MAIN"
				android:targetPackage="de.ub0r.android.travelLog"
				android:targetClass="de.ub0r.android.travelLog.ui.PreferencesGoHome" />
		</PreferenceScreen>
	</PreferenceCategory>

	<PreferenceCategory android:title="@string/about_">
		<PreferenceScreen android:title="@string/about_"
			android:summary="@string/about_hint">
			<intent android:action="android.intent.action.MAIN"
				android:targetPackage="de.ub0r.android.travelLog"
				android:targetClass="de.ub0r.android.travelLog.ui.About" />
		</PreferenceScreen>
		<PreferenceScreen android:title="@string/feedback_"
			android:summary="@string/feedback_hint">
			<intent android:action="android.intent.action.VIEW"
				android:data="http://code.google.com/p/ub0rapps/issues/list" />
		</PreferenceScreen>
		<PreferenceScreen android:title="@string/twitter_"
			android:summary="@string/twitter_hint">
			<intent android:action="android.intent.action.VIEW"
				android:data="http://twitter.com/flx_b" />
		</PreferenceScreen>
		<PreferenceScreen android:title="@string/more_">
			<intent android:action="android.intent.action.VIEW"
				android:data="market://search?q=pub:&quot;Felix Bechstein&quot;" />
		</PreferenceScreen>
	</PreferenceCategory>
</PreferenceScreen>
